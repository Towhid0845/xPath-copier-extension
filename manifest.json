{
  "manifest_version": 3,
  "name": "XPath Copier",
  "version": "1.0",
  "description": "Copy XPath of elements from the context menu",
  "permissions": ["activeTab", "scripting", "storage", "clipboardWrite", "contextMenus"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "XPath Copier"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}